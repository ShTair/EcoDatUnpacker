<Window x:Class="EcoDatUnpacker.ExpandingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="えこだっとあんぱっかー" Loaded="Window_Loaded"
        Closing="Window_Closing" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" ShowInTaskbar="False" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        SizeToContent="WidthAndHeight"
        Icon="Images/bookmark_yellow.ico">
    <StackPanel Margin="9" Width="500">
        <Grid Margin="3">
            <TextBlock Text="展開しています..." VerticalAlignment="Top" />
            <TextBlock HorizontalAlignment="Right" Name="textBlock1" Text="TextBlock" VerticalAlignment="Top" />
        </Grid>
        <ProgressBar Height="12" Name="allProgressBar" VerticalAlignment="Top" Maximum="1" Margin="3" />
        <TextBlock HorizontalAlignment="Left" Name="textBlock2" Text="TextBlock" VerticalAlignment="Top" Margin="3" />
        <Button Content="中断" Height="23" HorizontalAlignment="Right" Name="button1" VerticalAlignment="Bottom" Width="75" Click="button1_Click" Margin="3" />
    </StackPanel>
</Window>
